/* pages/userPage/userPage.wxss */

page {
  background: #f6f6f6;
  height: 100%;
}

i-tab-bar {
  position: fixed;
  bottom: 0;
  width: 100%;
}

@keyframes loading-spin {
  0% {
      transform: rotate(0);
  }
  100% {
      transform: rotate(360deg);
  }
}

.loadingView {
  display: inline-block;
  margin-right: 12px;
  vertical-align: middle;
  width: 20px;
  height: 20px;
  background: transparent;
  border-radius: 50%;
  border: 2px solid #2d8cf0;
  border-color: #2d8cf0 #2d8cf0 #2d8cf0 transparent;
  animation: loading-spin 0.6s linear;
  animation-iteration-count: infinite;
}

.no_position_hint {
  color: #2d8cf0;
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100%;
  width: 100%;
  font-size: 18px;
}